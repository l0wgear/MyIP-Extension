{
    "name": "MyIP",
    "description": "Shows user IP and country",
    "version": "0.1",
    "manifest_version": 3,
    "permissions": ["storage"],
    "host_permissions": ["https://api.myip.com/"],

    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/images/ip-16.png",
            "32": "/images/ip-32.png",
            "48": "/images/ip-48.png",
            "100": "/images/ip-100.png"
        }
    },
    "icons": {
        "16": "/images/ip-16.png",
        "32": "/images/ip-32.png",
        "48": "/images/ip-48.png",
        "100": "/images/ip-100.png"
    }
}